             } catch (ArithmeticException error) {
                 System.out.printf("please enter date of birth greater than 0 ðŸ˜‡ %n");
             } catch (Exception error) {
                 // general
                 System.out.printf("error  General : %s %n ", error);
             }
             System.out.println("----- new program -----");

                try {
                     String fName = System.console().readLine("Enter first name :");
                     String lName = System.console().readLine("Enter last name :");
                     System.out.printf("full name :  %s %s ", fName, lName);
                 } catch (Exception error) {
                     System.out.printf("error : %s  %n", error.getMessage());
                 } finally {
                     System.out.printf("Goodbye take care ðŸ‘‹ %n ");



}
