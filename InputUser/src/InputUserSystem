public class InputUserSystem {
    public static void main(String[] args) {
        // terminal same cmd same console
        String inputCurrentYear = System.console().readLine("Enter Current Year :");
        int currentYear = Integer.parseInt(inputCurrentYear);


        String inputDateOfBirth = System.console().readLine("Enter Date Of Birth : ");
        int dateOfBirth = Integer.parseInt(inputDateOfBirth);

        int age = currentYear - dateOfBirth;
        System.out.printf("age : %d %n", age);

    }
    catch (NullPointerException pointer) {
